<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlAddClient"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/nametext"
                android:layout_width="@dimen/add_client_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Имена*:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/nametext"
                android:background="@drawable/background_edittext"
                android:padding="10dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/mobileText"
                android:layout_width="@dimen/add_client_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Тел.:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etClientMobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/mobileText"
                android:background="@drawable/background_edittext"
                android:inputType="number"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/emailText"
                android:layout_width="@dimen/add_client_text_width"
                android:layout_height="wrap_content"
                android:text="Имейл:"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etClientEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/emailText"
                android:background="@drawable/background_edittext"
                android:inputType="textEmailAddress"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/notesText"
                android:layout_width="@dimen/add_client_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Бележки:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etClientNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/notesText"
                android:background="@drawable/background_edittext"
                android:padding="10dp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/ivClientSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/save" />


    </LinearLayout>


</RelativeLayout>