<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:scaleType="fitEnd"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_close_grey_600_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:src="@drawable/client_nav"/>

        <TextView
            android:id="@+id/tv_title"
            android:text="Title"
            android:textColor="#333"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/nametext"
        android:background="@drawable/background_edittext"
        android:padding="10dp"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRow_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text=""
            android:textColor="#333"
            android:textSize="12dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etDateRow_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/nametext"
            android:layout_weight="2"
            android:background="@drawable/background_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/etTimeRow_1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/nametext"
            android:background="@drawable/background_edittext"
            android:inputType="number"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRow_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text=""
            android:textColor="#333"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDateRow_2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/nametext"
            android:background="@drawable/background_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/etTimeRow_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/nametext"
            android:layout_weight="2"
            android:background="@drawable/background_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:textSize="13dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/save" />

</LinearLayout>