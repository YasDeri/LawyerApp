<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/nametext"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Имена*:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/client_list_image"
                android:layout_toRightOf="@+id/nametext"
                android:background="@drawable/background_edittext"
                android:hint="Enter Text"
                android:padding="10dp"
                android:visibility="gone" />

            <AutoCompleteTextView
                android:id="@+id/auto_complete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toLeftOf="@+id/client_list_image"
                android:layout_toRightOf="@+id/nametext"
                android:background="@drawable/background_edittext"
                android:completionThreshold="0"
                android:padding="10dp" />

            <Spinner
                android:id="@+id/nameSpinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/client_list_image"
                android:layout_toRightOf="@+id/nametext"
                android:background="@drawable/background_edittext"
                android:padding="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/client_list_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/client_list"
                android:visibility="gone" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/mobileText"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Тел.:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/mobileText"
                android:background="@drawable/background_edittext"
                android:hint="@string/enter_text"
                android:inputType="number"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/emailText"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Имейл:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/emailText"
                android:background="@drawable/background_edittext"
                android:hint="@string/enter_text"
                android:inputType="textEmailAddress"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/locationText"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="Място:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/locationText"
                android:background="@drawable/background_edittext"
                android:hint="@string/enter_text"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/notesText"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Бележки:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/notesText"
                android:background="@drawable/background_edittext"
                android:hint="@string/enter_text"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/meetingtext"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Дата*:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_date_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/meetingtext"
                android:weightSum="2">

                <EditText
                    android:id="@+id/date_event"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/background_edittext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="Дата"
                    android:padding="5dp" />


                <EditText
                    android:id="@+id/time_event"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                    android:layout_toRightOf="@+id/date_event"
                    android:background="@drawable/background_edittext"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="Час"
                    android:padding="5dp" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/remindertext"
                android:layout_width="@dimen/add_metting_text_width"
                android:layout_height="wrap_content"
                android:text="Напомняне:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/remindertext"
                android:weightSum="2">
            <EditText
                android:id="@+id/date_reminder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/add_metting_edittext_m_l"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/remindertext"
                android:background="@drawable/background_edittext"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Дата"
                android:padding="5dp" />


            <EditText
                android:id="@+id/time_reminder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/add_meeting_edittext_m_r"
                android:layout_toRightOf="@+id/date_reminder"
                android:background="@drawable/background_edittext"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Час"
                android:padding="5dp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/save"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/save" />


    </LinearLayout>


    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:SpinKit_Color="@color/backgroundColor" />

</RelativeLayout>